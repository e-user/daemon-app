{
  "name": "daemon-app",
  "version": "0.1.0",
  "description": "Daemon Client",
  "main": "src/main/index.js",
  "repository": "https://github.com/e-user/daemon-app",
  "author": "Alexander Kahl <npm@sodosopa.io>",
  "license": "Apache-2.0",
  "private": false,
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "bootstrap": "^4.1.0",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-builder": "^20.8.1",
    "electron-icon-maker": "^0.0.4",
    "electron-webpack": "^2.0.1",
    "file-loader": "^1.1.11",
    "jquery": "^3.3.1",
    "node-sass": "^4.8.3",
    "popper.js": "^1.14.3",
    "postcss-loader": "^2.1.3",
    "precss": "^3.1.2",
    "sass-loader": "^6.0.7",
    "standard-loader": "^6.0.1",
    "style-loader": "^0.20.3",
    "typeface-quattrocento": "^0.0.54",
    "vue": "^2.5.16",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.5.0"
  },
  "build": {
    "appId": "io.sodosopa.daemon-app",
    "copyright": "Copyright Â© 2018 Alexander Kahl <ak@sodosopa.io>",
    "linux": {
      "category": "Utility;TextEditor;",
      "target": [
        "rpm"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "NSIS"
    }
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn build && yarn compile && electron-builder",
    "dist:dir": "yarn dist -- --dir -c.compression=store -c.mac.identity=null",
    "postinstall": "electron-builder install-app-deps",
    "icons": "electron-icon-maker --input=static/daemon.png --output=build",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch"
  },
  "dependencies": {}
}
